{
  "manifest_version": 3,
  "name": "Simple Focus Timer",
  "version": "1.1",
  "description": "A simple, clean countdown timer and tab usage tracker.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["storage", "tabs", "activeTab"]
}